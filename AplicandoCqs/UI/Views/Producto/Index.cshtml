@model UI.Models.ProductoViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Crear nuevo", "Nuevo")
    </p>
    <table class="table">
        <tr>
            <th>Nombre</th>
            <th>Categoria</th>
            <th>Tipo</th>
        </tr>
    
    @foreach (var item in Model.Productos) {
        <tr>
            <td>@item.Nombre</td>
            <td>@item.CategoriaNombre</td>
            <td>@item.TipoNombre</td>
        </tr>
    }
    
    </table>
</body>
</html>
